{
    "name": "midnight/permissions-module",
    "license": "MIT",
    "type": "library",
    "description": "Zend Framework module for midnight/permissions package",
    "require": {
        "php": "^7.0",
        "container-interop/container-interop": "^1.2",
        "midnight/permissions": "^1.0",
        "psr/container": "^1.0",
        "zendframework/zend-modulemanager": "^2.0",
        "zendframework/zend-servicemanager": "^2.0 || ^3.3",
        "zendframework/zend-view": "^2.0"
    },
    "require-dev": {
        "infection/infection": "^0.8",
        "maglnet/composer-require-checker": "^0.2",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-strict-rules": "^0.9",
        "phpunit/phpunit": "^7.1",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Midnight\\PermissionsModule\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MidnightTest\\PermissionsModule\\": "tests"
        }
    },
    "extra": {
        "zf": {
            "module": "Midnight\\PermissionsModule"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check-deps": "vendor/bin/composer-require-checker",
        "cs-check": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "infection": "vendor/bin/infection --min-msi=100 --min-covered-msi=100 --log-verbosity=2",
        "phpstan": "vendor/bin/phpstan analyse src/ --level 7 -c phpstan.neon",
        "phpunit": "vendor/bin/phpunit",
        "check": [
            "@check-deps",
            "@infection",
            "@phpstan",
            "@phpunit",
            "@cs-check"
        ]
    }
}
